<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>URL Shortener</title>
   <style>
      body {
         font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
         background: #f4f6f8;
         margin: 0;
         padding: 20px;
      }

      h1 {
         text-align: center;
         color: #2c3e50;
      }

      form {
         display: flex;
         justify-content: center;
         margin-bottom: 20px;
         gap: 10px;
      }

      input[type="text"] {
         padding: 10px;
         width: 300px;
         border: 1px solid #ccc;
         border-radius: 6px;
      }

      button {
         padding: 10px 15px;
         background-color: #3498db;
         color: white;
         border: none;
         border-radius: 6px;
         cursor: pointer;
      }

      button:hover {
         background-color: #2980b9;
      }

      .short-url {
         text-align: center;
         margin-top: 15px;
         color: green;
         font-size: 18px;
      }

      table {
         width: 100%;
         border-collapse: collapse;
         background: white;
         box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
      }

      th,
      td {
         padding: 12px 15px;
         border: 1px solid #ddd;
         text-align: center;
      }

      th {
         background-color: #3498db;
         color: white;
      }

      tr:nth-child(even) {
         background-color: #f2f2f2;
      }

      .copy-button {
         background-color: #2ecc71;
         color: white;
         padding: 5px 10px;
         border: none;
         border-radius: 4px;
         cursor: pointer;
      }

      .copy-button:hover {
         background-color: #27ae60;
      }
   </style>
</head>

<body>
   <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
      <h2>Welcome ðŸ‘‹</h2>
      <form method="POST" action="/user/logout">
         <button type="submit"
            style="padding: 8px 12px; background-color: #e74c3c; color: white; border: none; border-radius: 6px; cursor: pointer;">
            Logout
         </button>
      </form>
   </div>
    
   
   <h1>ðŸ”— URL Shortener</h1>

   <form method="POST" action="/url">
      <input type="text" name="url" placeholder="Enter your original URL" required>
      <button type="submit">Generate</button>
   </form>

   <% if (locals.id) { %>
      <div class="short-url">
         âœ… Short URL: <a href="http://localhost:8001/<%= id %>" target="_blank">http://localhost:8001/<%= id %></a>
         <button class="copy-button" onclick="copyToClipboard('http://localhost:8001/<%= id %>')">Copy</button>
      </div>
      <% } %>

         <% if (locals.urls && urls.length> 0) { %>
            <h2>Your URLs</h2>
            <table>
               <thead>
                  <tr>
                     <th>S.No</th>
                     <th>Short ID</th>
                     <th>Original URL</th>
                     <th>Clicks</th>
                     <th>Actions</th> <!-- New column -->
                  </tr>
               </thead>
               <tbody>
                  <% urls.forEach((url, index)=> { %>
                     <tr>
                        <td>
                           <%= index + 1 %>
                        </td>
                        <td>
                           <a href="/<%= url.shortId %>" target="_blank">
                              http://localhost:8001/<%= url.shortId %>
                           </a>
                        </td>
                        <td>
                           <%= url.redirectURL %>
                        </td>
                        <td>
                           <%= url.visitHistory.length %>
                        </td>
                        <td>
                           <button class="copy-button" onclick="deleteURL('<%= url.shortId %>')">Remove</button>
                        </td>
                     </tr>
                     <% }) %>
               </tbody>
                
                
            </table>
            <% } %>

            <script>
               function copyToClipboard(text) {
                  navigator.clipboard.writeText(text).then(() => {
                     alert("Copied to clipboard!");
                  });
               }

               function deleteURL(shortId) {
                  if (confirm("Are you sure you want to delete this URL?")) {
                     fetch(`/url/${shortId}`, {
                        method: "DELETE",
                     })
                        .then((res) => {
                           if (res.ok) {
                              location.reload(); // Refresh page on success
                           } else {
                              alert("Failed to delete URL");
                           }
                        })
                        .catch(() => alert("Error deleting URL"));
                  }
               }
            </script>
             
</body>

</html>